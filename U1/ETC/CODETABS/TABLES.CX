#include <stdio.h>

#define TABENT  unsigned char

#define DOSEOF  0x1a            /* ^Z - end of DOS text file */

char    *prog, *strrchr();
int     toflag, zflag;

main(argc, argv)
  char **argv;
{
  int i;

  if (prog = strrchr(*argv, '/'))
   ++prog;
  else
   prog = *argv;

  if (!strcmp(argv[1], "-z")) {
   zflag = 1;
   ++argv;
   --argc;
  }

  if (argc < 2) {
   fputs("Arg count.\n", stderr);
   exit(2);
  }

  toflag = strcmp(prog, "fromdos");

  cptab(toflag);

  for (i = 1; i < argc; i++)
   dofile(argv[i]);
}

