dofile(name)
  char *name;
{
  register        c;
  register FILE   *inf, *outf;
  char *tname;
  if (!(inf = fopen(name, "r+"))) {
   perror(name);
   return;
  }
  if (!(outf = fopen((tname = tempnam(".", NULL)), "w"))) {
   perror("tmpfile");
   return;
  }

  while ((c = getc(inf)) != EOF) {
   if ((c == '\r') && !toflag)
      continue;
   if ((c == '\n') && toflag) {
      putc('\r', outf);
      putc('\n', outf);
      continue;
   }
   if ((c == DOSEOF) && !toflag && !zflag)
      break;
   if (c & 0x80)
      c = xtab[c & 0x7f];
   putc(c, outf);
  }
  fclose(inf);
  fclose(outf);
  if (unlink(name)) {
   perror(name);
   unlink(tname);
   return;
  }
  if (link(tname, name)) {
   perror(name);
   unlink(tname);
   return;
  }
  unlink(tname);
}

cptab(toflag) {
  memcpy(xtab, toflag ? koi82alt : alt2koi8, sizeof(xtab));
}
