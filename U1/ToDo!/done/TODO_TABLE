#include        <stdio.h>
#include        <stdlib.h>

unsigned char KoiTable [128] =
{
    0xC4,0xB3,0xDA,0xBF,0xC0,0xD9,0xC3,0xB4,0xC2,0xC1,0xC5,0xDF,0xDC,0xDB,0xDD, 0xDE,
    0xB0,0xB1,0xB2,0xD1,0xFE,0xD6,0xFB,0xD7,0xB7,0xB8,0xFF,0xD2,0xB6,0xFD,0xFA, 0xBD,
    0xCD,0xBA,0xD5,0xF1,0xF5,0xC9,0xF7,0xF9,0xBB,0xD4,0xD3,0xC8,0xBE,0xF3,0xBC, 0xC6,
    0xC7,0xCC,0xB5,0xF0,0xF4,0xB9,0xF6,0xF8,0xCB,0xCF,0xD0,0xCA,0xD8,0xF2,0xCE, 0xFC,
    0xEE,0xA0,0xA1,0xE6,0xA4,0xA5,0xE4,0xA3,0xE5,0xA8,0xA9,0xAA,0xAB,0xAC,0xAD, 0xAE,
    0xAF,0xEF,0xE0,0xE1,0xE2,0xE3,0xA6,0xA2,0xEC,0xEB,0xA7,0xE8,0xED,0xE9,0xE7, 0xEA,
    0x9E,0x80,0x81,0x96,0x84,0x85,0x94,0x83,0x95,0x88,0x89,0x8A,0x8B,0x8C,0x8D, 0x8E,
    0x8F,0x9F,0x90,0x91,0x92,0x93,0x86,0x82,0x9C,0x9B,0x87,0x98,0x9D,0x99,0x97, 0x9A
};

int main()
{
   int chr;

      while ((chr = getc(stdin)) != EOF)
         if (chr < 0x80)
            putc(chr, stdout);
         else
            putc(KoiTable[chr - 0x80], stdout);

   return 0;
}

